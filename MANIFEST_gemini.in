# Include documentation and configuration files
include README.md
include LICENSE
include CHANGELOG.md

# Include type hint marker (though package_data handles this)
include snowflake_etl/py.typed

# Include configuration examples if they exist
recursive-include config *.json.example

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*

# Exclude test and docs from distribution
prune tests
prune docs

# Exclude old standalone scripts (now part of package)
exclude tsv_loader.py
exclude drop_month.py
exclude generate_table_report.py
exclude check_duplicates_interactive.py
exclude validate_tsv_file.py
exclude compare_tsv_files.py
exclude tsv_file_browser.py
exclude check_snowflake_table.py
exclude check_stage_and_performance.py
exclude diagnose_copy_error.py